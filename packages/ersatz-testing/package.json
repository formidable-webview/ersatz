{
  "name": "@formidable-webview/ersatz-testing",
  "version": "1.0.1",
  "description": "ðŸš€ Test React Native WebViews with @testing-library/react-native, jest and @formidable-webview/ersatz",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "yarn test:ts && yarn test:lint && yarn test:doc && yarn test:integration",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint --ext ts,tsx src/",
    "test:doc": "embedme --verify README.md",
    "build:doc": "embedme README.md",
    "build:source": "bob build",
    "build": "yarn build:doc && yarn build:source",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/formidable-webview/ersatz.git"
  },
  "keywords": [
    "react-native",
    "react-native-webview",
    "testing-library",
    "jsdom",
    "DOM"
  ],
  "author": "Jules Sam. Randolph <jules.sam.randolph@gmail.com> (https://github.com/jsamr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/formidable-webview/ersatz/issues"
  },
  "homepage": "https://github.com/formidable-webview/tree/master/packages/ersatz-testing#readme",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@react-native-community/bob": "^0.16.2",
    "@release-it/conventional-changelog": "^2.0.0",
    "@testing-library/react-native": "^7.0.2",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.51",
    "@types/react-native": "^0.63.25",
    "@types/react-test-renderer": "^16.9.3",
    "babel-jest": "^26.5.2",
    "embedme": "^1.22.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "metro-react-native-babel-preset": "^0.63.0",
    "prettier": "^2.1.2",
    "react": "16.13.1",
    "react-native": "^0.63.3",
    "react-native-webview": "^10.9.2",
    "react-test-renderer": "16.13.1",
    "release-it": "^14.0.3",
    "typescript": "~3.9.7"
  },
  "peerDependencies": {
    "@testing-library/react-native": ">=7.0.1",
    "jest": "*",
    "react": "*",
    "react-native": "*",
    "react-native-webview": "*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@formidable-webview/ersatz-core": "workspace:*",
    "@formidable-webview/skeletton": "workspace:*"
  }
}
