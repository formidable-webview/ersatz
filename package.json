{
  "name": "@formidable-webview/ersatz",
  "version": "1.0.1",
  "description": "ðŸš€ Emulate and test WebView behaviors in node with jest and jsdom",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "yarn run test:jest && yarn run test:ts && yarn run test:lint",
    "test:jest": "jest src/",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint --ext ts,tsx src/",
    "build": "bob build",
    "prepare": "yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/formidable-webview/ersatz.git"
  },
  "keywords": [
    "react-native",
    "react-native-webview",
    "jsdom",
    "emulator",
    "test",
    "DOM"
  ],
  "author": "Jules Sam. Randolph <jules.sam.randolph@gmail.com> (https://github.com/jsamr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/formidable-webview/ersatz/issues"
  },
  "homepage": "https://github.com/formidable-webview/ersatz#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@formidable-webview/ersatz-testing": "^1.0.1",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@testing-library/react-native": "^7.0.2",
    "@tsconfig/react-native": "^1.0.2",
    "@types/assert": "^1.5.1",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.48",
    "@types/react-native": "^0.63.10",
    "@types/react-test-renderer": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-jest": "^26.3.0",
    "commitlint": "^9.1.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "metro-react-native-babel-preset": "^0.63.0",
    "nock": "^13.0.4",
    "prettier": "^2.1.1",
    "react": "16.13.1",
    "react-native": "^0.63.2",
    "react-native-webview": "^10.8.2",
    "react-test-renderer": "16.13.1",
    "release-it": "^13.7.0",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@formidable-webview/ersatz-core": "^1.0.0",
    "assert": "^2.0.0",
    "canvas": "^2.6.1",
    "jsdom": "tobyhinloopen/jsdom#2792-replace-request-with-node-fetch",
    "node-fetch": "^3.0.0-beta.8"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-webview": ">= 7.6.0 < 11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.MD",
        "skipUnstable": true
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
